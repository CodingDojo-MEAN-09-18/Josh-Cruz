    <title>Wisdom Wall</title>
</head>

<body style="display:flex; flex-direction:column; align-content:center; justify-content:center; background-color:linen; ">

    <div class="container" style="display:inline-flex; justify-content: center;">
        <h1>Wisdom Central</h1>
       <div style=" background-color: white; height:40vh; width:50vw;">
         <ul style="list-style: none;">
          <li> <% if (users) { %>
            <% for(const user of users) { %>
              <% for (const quote of user.quotes){ %>
                <% if(typeof quote === "string"){ %>
                <h4><%= quote %></h4>
              <br>

              <% } else { %>
              <h4>  <%= quote.quote %> </h4>
                -By <%= user.name %> on <%= new Date(quote.createdAt) %>
                <% } %>

              <% } %>
            <% } %>
            <% } %>
          </li>

         </ul>

       </div>
    </div>


    <script type="text/javascript">

      $(document).ready(function () {
           $('ul').append("<li> <h3>" + user.quote + "</h3 >" + "<br>" + "  -" + user.name + "at " + user.updatedAt  + "</li>");
        });


